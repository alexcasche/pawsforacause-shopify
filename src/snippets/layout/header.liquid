<header id="header" class="c-header">
  <div id="headerBar" class="c-headerBar">
    <i class="c-headerBar__icon fas fa-heart"></i>
    100% profits to shelters
    <i class="c-headerBar__icon fas fa-heart"></i>
  </div>
  <div id="headerTop" class="c-headerTop">
    <button class="c-headerTop__menu trigger-sidemenu">
      <span class="c-headerTop__burger">
        {% include 'icon-burger' %}
      </span>
      <span class="c-headerTop__burger u-hidden">
        {% include 'icon-close' %}
      </span>
    </button>
    <a class="c-headerTop__logo" href="/">
      <img class="c-headerTop__logoIcon" src="{{ 'logo.svg' | asset_url }}"  alt="{{ shop.name }}" />
    </a>
    <button class="c-headerTop__cartTrigger trigger-cart">
      {% include 'icon-cart' %}
    </button>
  </div>
  <div id="headerBottom" class="c-headerBottom">
    <nav class="c-headerBottom__nav o-container--large">
      <div class="c-headerBottom__account trigger-menu-account">
        <button class="c-headerBottom__burger">
          {% include 'icon-burger' %}
        </button>
        <ul class="c-headerBottom__drop" id="menu-account">
          {% if customer %}
            <li class="c-headerBottom__dropItem">
              <a class="c-headerBottom__dropLink" href="/account">
                Account
              </a>
            </li>
            <li class="c-headerBottom__dropItem">
              <a class="c-headerBottom__dropLink" href="/logout">
                Logout
              </a>
            </li>
          {% else %}
            <li class="c-headerBottom__dropItem">
              <a class="c-headerBottom__dropLink" href="/account/login">
                Sign In
              </a>
            </li>
            <li class="c-headerBottom__dropItem">
              <a class="c-headerBottom__dropLink" href="/account/register">
                Create Account
              </a>
            </li>
          {% endif %}
        </ul>
      </div>
      <ul class="c-headerBottom__list">
        {% for link in linklists.main-menu-dev.links %}
          <li class="c-headerBottom__item">
            <a class="c-headerBottom__link" href="{{ link.url }}">
              {{ link.title }}
            </a>
            {% if link.links.size > 0 %}
              <ul class="c-headerBottom__drop">
                {% for link in link.links %}
                  <li class="c-headerBottom__dropItem">
                    <a class="c-headerBottom__dropLink" href="{{ link.url }}">
                      {{ link.title }}
                    </a>
                  </li>
                {% endfor %}
              </ul>
            {% endif %}
          </li>
        {% endfor %}
      </ul>
      <a class="c-headerBottom__cart trigger-cart">
        {% include 'icon-cart' %}
        <span class="c-headerBottom__cartCount vue-cart-count">
          {{ cart.item_count }}
        </span>
      </a>
    </nav>
  </div>
</header>

{{ 'header.js' | asset_url | script_tag }}