<div class="c-productImages__slideshow {{ class_prefix }}slideshow c-slideshow o-flexItem-50 o-flexColumn">
  {% assign featured_image = current_variant.featured_image | default: product.featured_image %}
  <div class="c-productImages__imageBox {{ class_prefix }}imageBox">
    <img class="c-productImages__image {{ class_prefix }}image" src="{{ featured_image | img_url: '1024x1024' }}" alt="{{ featured_image.alt | escape }}" />
  </div>
  <ul class="c-productImages__thumbnailList {{ class_prefix }}thumbnailList o-flexRow">
    {% for image in product.images %}
    <li class="c-productImages__thumbnailItem {{ class_prefix }}thumbnailItem {% if forloop.first %}is-active{% endif %}">
      <a class="c-productImages__thumbnailLink {{ class_prefix }}thumbnailLink trigger-product-thumb" aria-label="Product Thumbnail">
        <img class="c-productImages__thumbnailImage {{ class_prefix }}thumbnailImage" src="{{ image.src | img_url: 'compact' }}" data-url="{{ image.src | img_url: '1024x1024' }}" alt="{{ image.alt | escape }}" />
      </a>
    </li>
    {% endfor %}
  </ul>
</div>

<script src="{{ 'slideshow.js' | asset_url }}" defer="defer"></script>
<script src="{{ 'carousel.js' | asset_url }}" defer="defer"></script>