<div class="{{ class_prefix }}images c-slideshow o-flexItem-50 o-flexRow">
  {% unless product.images.size == 1 %}
    <ul class="{{ class_prefix }}thumbnailList">
      {% for image in product.images %}
      <li class="{{ class_prefix }}thumbnailItem {% if forloop.first %}is-active{% endif %}">
        <a class="{{ class_prefix }}thumbnailLink trigger-product-thumb" aria-label="Product Thumbnail">
          <img class="{{ class_prefix }}thumbnailImage" src="{{ image.src | img_url: 'compact' }}" data-url="{{ image.src | img_url: '1024x1024' }}" alt="{{ image.alt | escape }}" />
        </a>
      </li>
      {% endfor %}
    </ul>
  {% endunless %}
  {% assign featured_image = current_variant.featured_image | default: product.featured_image %}
  <div class="{{ class_prefix }}imageBox">
    <img class="{{ class_prefix }}image" src="{{ featured_image | img_url: '1024x1024' }}" alt="{{ featured_image.alt | escape }}" />
  </div>
</div>

<script src="{{ 'slideshow.js' | asset_url }}" defer="defer"></script>
<script src="{{ 'carousel.js' | asset_url }}" defer="defer"></script>