{% assign metafields = product.metafields.product %}
<div class="c-productForm">
  {% if product.vendor and settings.show_vendor %}
    <h5 class="c-productForm__vendor">
      {{ product.vendor }}
    </h5>
  {% endif %}
  <h1 class="c-productForm__title">
    {{ product.title }}
  </h1>
  {% if metafields.tagline and settings.show_tagline %}
    <span class="c-productForm__tagline">
      {{ metafields.tagline }}
    </span>
  {% endif %}
  <vue-product-add
    product="{{ product | json | escape }}"
    class_name="c-productForm"
    quantity_label="{{ settings.quantity_label }}"
    button_active_text="{{ settings.button_active_text }}"
    button_disabled_text="{{ settings.button_disabled_text }}"
  >
  </vue-product-add>
</div>