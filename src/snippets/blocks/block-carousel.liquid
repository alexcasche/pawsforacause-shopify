<div class="c-carousel is-loading">
  {% include "part-loading-dots" with count: 4 %}
  <div class="c-carousel__buttons">
    <span class="c-carousel__button"></span>
    <span class="c-carousel__button"></span>
  </div>
  <div class="c-carousel__track">
    {% for item in items %}
      <div class="c-carousel__slide">
        {{ item }}
      </div>
    {% endfor %}
  </div>
  <div class="c-carousel__bubbles">
     {% for item in items %}
      <span class="c-carousel__bubble"></span>
    {% endfor %}
  </div>
</div>

<script src="{{ 'block-carousel.js' | asset_url }}" defer="defer"></script>