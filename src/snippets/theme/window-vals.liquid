<script>
  window.theme = {};
  window.theme.allCountryOptionTags = {{ all_country_option_tags | json }};
  window.theme.customer = {}
  {% assign address = customer.default_address %};
  {% if address %}
    var defaultAddress = "{{ address.address1 }}, ";
    {% if address.address2 != blank %}
      defaultAddress += "{{ address.address2}}, "
    {% endif %}
    defaultAddress += "{{ address.city }}, {{ address.province }} {{ address.zip }}, {{ address.country }}"
    window.theme.customer.defaultAddress = defaultAddress;
  {% endif %}
  window.theme.cart = { 
    currency: {
      iso: "{{ cart.currency.iso_code }}",
      name: "{{ cart.currency.name }}",
      symbol: "{{ cart.currency.symbol }}"
    },
    shipping_threshold: "{{ settings.shipping_threshold }}"
  }
</script>