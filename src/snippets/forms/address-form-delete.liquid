{% for address in customer.addresses %}
  <div class="c-addressForm u-hidden" id="deleteAddress_{{ address.id }}">
    <h3 class="c-addressForm__heading">
      Are you sure you want to delete this address?
    </h3>
    <div class="c-addressForm__group">
      <h4 class="c-addressesForm__subheading">
        {{ address.first_name | capitalize }} {{ address.last_name | capitalize }}
      </h4>
      <div class="c-addressesForm__text">
        {% if address.company != '' and address.company != nil %}
          {{ address.company }}<br />
        {% endif %}
        {{ address.address1 }}<br />
        {% if address.address2 != '' and address.address2 != nil %}
          {{ address.address2 }}<br />
        {% endif %}
        {{ address.city}}, {% if address.province_code %}{{ address.province_code }}, {% endif %} {{ address.zip }}<br />
        {% if address.phone != '' and address.phone != nil %}
          {{ address.phone }}
        {% endif %}
      </div>
    </div>
    <form method="post" action="/account/addresses/{{ address.id }}">
      <input type="hidden" name="_method" value="delete"/>
      <div class="c-form__buttons">
        <button class="c-form__button c-button-large c-button--edit" type="submit">Confirm<button>
        <button class="c-form__button c-button-large c-button--cancel trigger-modal" type="button" data-modal-id="addressModal">Cancel</button>
      </div>
    </form>
  </div>
{% endfor %}