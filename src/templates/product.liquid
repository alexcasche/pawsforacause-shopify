<meta itemprop="url" content="{{ shop.url }}{{ product.url }}">
<meta itemprop="image" content="{{ product.featured_image.src | img_url: '1024x1024' }}">
<section class="c-productMain">
  <div class="c-productMain__wrapper o-container--large">
    {% include 'breadcrumbs' %}
    <div class="c-productMain__images c-productMain__side">
      {% unless product.images.size == 1 %}
        <ul class="c-productMain__thumbnailList">
          {% for image in product.images %}
          <li class="c-productMain__thumbnailItem {% if forloop.first %}is-active{% endif %}">
            <a class="c-productMain__thumbnailLink trigger-product-thumb" aria-label="Product Thumbnail">
              <img class="c-productMain__thumbnailImage" src="{{ image.src | img_url: 'compact' }}" data-url="{{ image.src | img_url: '1024x1024' }}" alt="{{ image.alt | escape }}" />
            </a>
          </li>
          {% endfor %}
        </ul>
      {% endunless %}
      {% assign featured_image = current_variant.featured_image | default: product.featured_image %}
      <div class="c-productMain__imageBox">
        <img class="c-productMain__image" src="{{ featured_image | img_url: '1024x1024' }}" alt="{{ featured_image.alt | escape }}" />
      </div>
    </div>
    <aside class="c-productMain__aside c-productMain__side">
      {% if product.vendor %}
        <h5 class="c-productMain__vendor">Paws<!--{{ product.vendor }}--></h5>
      {% endif %}
      <h2 class="c-productMain__title">Red, White & Blue Dog Collar<!--{{ product.title }}--></h2>
      <p class="c-productMain__tagline">
        Made with <i class="c-productMain__taglineHeart fas fa-heart"></i> by Paws For A Cause
      </p>
    </aside>
  </div>
</section>
