{% layout 'paws' %}
<div class="c-auth">
  <h2 class="c-auth__heading">
    Reset Password
  </h2>
  <div id="resetPasswordForm">
    {% form 'reset_customer_password' %}
      <div class="c-auth__errors">
        {{ form.errors | default_errors }}
      </div>
      <div class="c-auth__form">
        <input class="c-auth__field" type="password" name="customer[password]" placeholder="Password" autofocus required>
        <input class="c-auth__field" type="password" name="customer[password_confirmation]" placeholder="Confirm Password" required>
        <button class="c-auth__button" type="submit">Submit</button>
      </div>
    {% endform %}
  </div>
</div>