  {
    "name": "Social",
    "settings": [
      {
        "type": "header",
        "content": "Accounts",
        "info": "Account URLS"
      },
      {
        "type": "text",
        "id": "account_facebook",
        "label": "Facebook"
      },
      {
        "type": "text",
        "id": "account_twitter",
        "label": "Twitter"
      },
      {
        "type": "text",
        "id": "account_instagram",
        "label": "Instagram"
      },
      {
        "type": "text",
        "id": "account_pinterest",
        "label": "Pinterest"
      },
      {
        "type": "text",
        "id": "account_youtube",
        "label": "Youtube"
      },
      {
        "type": "header",
        "content": "Sharing",
        "info": "Enable Sharing"
      },
      {
        "type": "checkbox",
        "id": "share_facebook",
        "label": "Facebook",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "share_twitter",
        "label": "Twitter",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "share_pinterest",
        "label": "Pinterest",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "share_email",
        "label": "Email",
        "default": true
      },
      {
        "type": "header",
        "content": "Icons",
        "info": "Font Awesome Classes"
      },
      {
        "type": "text",
        "id": "icon_facebook",
