      {
        "type": "text",
        "id": "icon_twitter",
        "label": "Twitter",
        "default": "fab fa-twitter"
      },
      {
        "type": "text",
        "id": "icon_instagram",
        "label": "Instagram",
        "default": "fab fa-instagram"
      },
      {
        "type": "text",
        "id": "icon_pinterest",
        "label": "Pinterest",
        "default": "fab fa-pinterest-p"
      },
      {
        "type": "text",
        "id": "icon_youtube",
        "label": "Youtube",
        "default": "fab fa-youtube"
      },
      {
        "type": "text",
        "id": "icon_email",
        "label": "Email",
        "default": "fas fa-envelope"
      }
    ]
  },
  {
    "name": "Newsletter",
    "settings": [
      {
        "type": "select",
        "id": "newsletter",
        "label": "Newsletter Service",
        "default": "shopify",
        "options": [
          {
            "value": "shopify",
            "label": "Shopify customers"
          },
          {
            "value": "mailchimp",
            "label": "MailChimp list"
          }
        ]
      },
      {
        "type": "text",
        "id": "newsletter_success",
        "label": "Newsletter Success",
        "default": "Thanks for signing up!"
      },
      {
        "type": "text",
        "id": "newsletter_placeholder",
        "label": "Newsletter Placeholder",
        "default": "Email Address"
      },
      {
        "type": "text",
        "id": "newsletter_button",
        "label": "Newsletter Button",
        "default": "Sign Up!"
      },
      {
        "type": "text",
        "id": "newsletter_action",
        "label": "MailChimp Action URL",
        "info": "[Mailchimp Ref](http:\/\/docs.shopify.com\/support\/configuration\/store-customization\/where-do-i-get-my-mailchimp-form-action)"
      }
    ]
  },
  {
    "name": "Shipping",
    "settings": [
      {
        "type": "text",
        "id": "shipping_threshold",
        "label": "Shipping Threshold",
        "info": "Total Until Free Shipping",
        "default": "100"
      }
    ]
  }
]
