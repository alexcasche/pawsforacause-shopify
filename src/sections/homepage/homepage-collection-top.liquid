<section class="c-collection">
  <div class="c-collection__inner">
    <h2 class="c-collection__heading">
      {{ section.settings.heading }}
    </h2>
    <div class="c-collection__grid">
      <div class="c-collection__item">
        Item 1
      </div>
      <div class="c-collection__item">
        Item 2
      </div>
    </div>
    <a class="c-collection__button">
      {{ section.settings.button_text }}
    </a>
  </div>
</section>

{% schema %}
{
	"name": "Section Collection",
	"settings": [
		{
			"id": "heading",
			"type": "text",
			"label": "Heading",
      "default": "New Arrivals"
		},
		{
			"id": "collection",
			"type": "collection",
			"label": "Collection"
		},
        {
      "id": "button_text",
      "type": "text",
      "label": "Button Text",
      "default": "Shop New Arrivals"
    }
  ]
}
{% endschema %}