<section class="c-collection">
  <div class="c-collection__inner">
    <h2 class="c-collection__heading">
      {{ section.settings.heading }}
    </h2>
    <div class="c-collection__grid u-no-javascript">
      {% for product in collections[section.settings.collection].products limit:8 %}
        <a class="c-collection__item">
          <img class="c-collection__itemImage" src="{{ product.images[0] | img_url: '500x' }}" alt="{{ product.images[0].alt }}" />
          <h5 class="c-collection__itemTitle">
            {{ product.title }}
          </h5>
          <h5 class="c-collection__itemPrice">
            {% if product.price_varies %}
              {{ product.price_min | money }} - {{ product.price_max | money }}
            {% else %}
              {{ product.price | money }}
            {% endif %}
          </h5>
        </a>
      {% endfor %}
    </div>
    <a class="c-collection__button" href="{{ collections[section.settings.collection].url }}">
      {{ section.settings.button_text }}
    </a>
  </div>
</section>

{% schema %}
{
	"name": "Best Sellers",
	"settings": [
		{
			"id": "heading",
			"type": "text",
			"label": "Heading",
      "default": "Best Sellers"
		},
		{
			"id": "collection",
			"type": "collection",
			"label": "Collection"
		},
    {
      "id": "button_text",
      "type": "text",
      "label": "Button Text",
      "default": "Shop Best Sellers"
    }
  ]
}
{% endschema %}