{% assign settings_json = section.settings | json | escape %}
{% assign collection_json = collections[section.settings.upsell_collection].products | json | escape %}

<vue-cart settings_json='{{ settings_json }}' collection_json='{{ collection_json }}'></vue-cart>

{% schema %}
{
	"name": "Cart",
	"settings": [
    {
      "type": "header",
      "content": "Cart Header"
    },
    {
      "type": "text",
      "id": "heading_text",
      "label": "Heading Text",
      "default": "Cart"
    },
    {
      "type": "text",
      "id": "subtotal_label",
      "label": "Subtotal Label",
      "default": "Subtotal:"
    },
    {
      "type": "text",
      "id": "checkout_button",
      "label": "Checkout Button",
      "default": "Checkout"
    },
    {
      "type": "header",
      "content": "Cart Content"
    },
    {
      "type": "text",
      "id": "empty_message",
      "label": "Empty Message",
      "default": "Oh no! Your cart is currently empty."
    },
    {
      "type": "text",
      "id": "empty_action",
      "label": "Empty Action",
      "default": "Fill it up to save some pups!"
    },
    {
      "type": "header",
      "content": "Cart Upsell"
    },
    {
      "type": "text",
      "id": "upsell_text",
      "label": "Upsell Text",
      "default": "Add {{ untilFreeShipping }} for free shipping!",
      "info": "Variable {{ untilFreeShipping }}"
    },
    {
      "type": "text",
      "id": "upsell_free_text",
      "label": "Upsell Fre Text",
      "default": "Hooray! Your order ships free.",
      "info": "Appears when free shipping reached."
    },
    {
      "type": "collection",
      "id": "upsell_collection",
      "label": "Upsell Collection"
    },
    {
      "type": "text",
      "id": "upsell_add_button",
      "label": "Add Button",
      "default": "Add"
    },
    {
      "type": "header",
      "content": "Cart Add",
      "info": "Appears after add product"
    },
    {
      "type": "text",
      "id": "add_quantity_label",
      "label": "Quantity Label",
      "default": "Quantity"
    },
    {
      "type": "text",
      "id": "add_cart_button",
      "label": "Add To Cart Button",
      "default": "Add To Cart"
    }
  ]
}
{% endschema %}