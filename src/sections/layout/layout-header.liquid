<header class="c-header">
  <div class="c-headerBar">
    <div class="c-headerBar__inner">
      <i class="c-headerBar__icon fas fa-heart"></i>
      100% profits to shelters
      <i class="c-headerBar__icon fas fa-heart"></i>
    </div>
  </div>
  <div class="c-headerMain">
    <div class="c-headerMain__inner">
      <a class="c-headerMain__logo" href="/">
        <img class="c-headerMain__logoIcon" src="{{ 'logo.svg' | asset_url }}"  alt="{{ shop.name }}" itemprop="logo" />
      </a>
      <nav class="c-headerMain__nav">
        {% for link in linklists.main-menu-dev.links %}
          <a class="c-headerMain__link{% if link.active %} c-headerMain__link--active{% endif %}" href="{{ link.url }}">{{ link.title }}</a>
        {% endfor %}
        <nav class="c-headerMain__social">
          {% assign socialIcons = 'facebook-f,twitter,instagram' | split:',' %}
          {% for link in linklists.social-menu-dev.links %}
            <a class="c-headerMain__socialLink" href= "{{ link.url }}" target="_blank">
              <i class="c-headerMain__socialIcon c-headerMain__socialIcon--{{ link.title | downcase }} fab fa-{{ socialIcons[forloop.index0] }}"></i>
            </a>
          {% endfor %}
        </nav>
      </nav>
       <vue-portal name="mini-cart-trigger-header" class="c-headerMain__cart"></vue-portal>
    </div>
  </div>
  <div class="c-headerMobile">
    <div class="c-headerMobile__inner">
      <vue-portal name="mobile-menu-trigger" class="c-headerMobile__cart"></vue-portal>
      <div id="mobile-menu-trigger" class="c-headerMobile__menu"></div>
      <a class="c-headerMobile__logo" href="/">
        <img class="c-headerMobile__logoIcon" src="{{ 'logo.svg' | asset_url }}"  alt="{{ shop.name }}" itemprop="logo" />
      </a>
      <vue-portal name="mini-cart-trigger-header-mobile" class="c-headerMobile__cart"></vue-portal>
    </div>
  </div>
